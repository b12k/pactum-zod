{
  "name": "@b12k/contracted",
  "version": "0.0.0",
  "description": "Contract programming boilerplate to design, test and use API contracts with PactumJS and Zod",
  "keywords": [
    "design by contract",
    "contract testing",
    "contract programming",
    "api design",
    "api testing",
    "api types",
    "api contracts"
  ],
  "publishConfig": {
    "access": "public"
  },
  "types": "dist/contracts/index.d.ts",
  "bin": {
    "test-contracts": "dist/bin.js"
  },
  "type": "module",
  "scripts": {
    "test": "run-s _test:*",
    "qc": "run-p _qc:*",
    "fix": "run-s _fix:*",
    "build": "run-s _build:*",
    "prepare": "husky",
    "release": "release-it --ci",
    "_test:wait": "env-cmd -i wait-on {{BASE_URL}} -t {{WAIT_TIMEOUT_SEC}}s",
    "_test:run": "env-cmd jest",
    "_qc:eslint": "pnpm _eslint",
    "_qc:typecheck": "tsc --noEmit",
    "_qc:prettier": "pnpm _prettier . -c",
    "_qc:npm-check-updates": "ncu -e 2",
    "_fix:npm-check-updates": "ncu -u && pnpm i",
    "_fix:prettier": "pnpm _prettier . -w",
    "_fix:eslint": "pnpm _eslint --fix",
    "_build:clear": "shx rm -rf dist",
    "_build:types": "tsc --project tsconfig.build.json",
    "_build:lib": "swc lib -d dist --strip-leading-paths",
    "_build:contracts": "swc contracts -d dist",
    "_prepare:husky": "husky init",
    "_prepare:env": "shx cp -u .env.example .env",
    "_husky:commit-msg": "commitlint",
    "_husky:pre-commit": "run-p _husky:pre-commit:*",
    "_husky:pre-commit:tsc": "pnpm _qc:typecheck",
    "_husky:pre-commit:lint-staged": "lint-staged",
    "_husky:pre-push": "branch-name-lint",
    "_eslint": "eslint .",
    "_prettier": "prettier --ignore-path .gitignore --ignore-unknown"
  },
  "author": "Bogdan Kolesnyk",
  "license": "MIT",
  "devDependencies": {
    "@b12k/branch-name-lint": "1.1.0",
    "@b12k/env-cmd": "10.2.0",
    "@commitlint/config-conventional": "19.2.2",
    "@eslint/config-inspector": "0.4.6",
    "@eslint/js": "9.0.0",
    "@release-it/conventional-changelog": "8.0.1",
    "@swc/cli": "0.3.12",
    "@swc/core": "1.4.16",
    "@swc/helpers": "0.5.10",
    "@swc/jest": "0.2.36",
    "@types/jest": "29.5.12",
    "@types/lodash": "4.17.0",
    "@types/lodash-es": "4.17.12",
    "@types/node": "20.12.7",
    "@types/update-notifier": "6.0.8",
    "commitlint": "19.2.2",
    "eslint": "9.0.0",
    "husky": "9.0.11",
    "lint-staged": "15.2.2",
    "npm-check-updates": "16.14.18",
    "npm-run-all": "4.1.5",
    "prettier": "3.2.5",
    "release-it": "17.2.0",
    "shx": "0.3.4",
    "ts-node": "10.9.2",
    "typescript": "5.4.5",
    "typescript-eslint": "7.7.0"
  },
  "dependencies": {
    "commander": "12.0.0",
    "jest": "29.7.0",
    "lodash": "4.17.21",
    "lodash-es": "4.17.21",
    "pactum": "3.6.7",
    "update-notifier": "7.0.0",
    "zod": "3.22.4"
  }
}
